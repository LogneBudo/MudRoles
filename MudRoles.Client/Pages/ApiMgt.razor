                        {
                            <MudButton Variant="Variant.Filled" OnClick="@(cellContext.Item != null ? (() => HandleKeyButtonClick(cellContext.Item)) : null)" EndIcon="@(cellContext.Item.IsKeyVisible ? Icons.Material.Filled.ContentCopy : Icons.Material.Filled.VisibilityOff)">@GetMaskedKey(cellContext.Item)</MudButton>
                        }
                    </CellTemplate>
                </TemplateColumn>

                <TemplateColumn Title="Scopes">
                    <CellTemplate Context="cellContext">
                        @foreach (var scope in cellContext.Item.Scopes)
