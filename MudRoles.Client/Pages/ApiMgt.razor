<script>
    window.copyToClipboard = async function (text) {
        if (document.hasFocus()) {
            try {
                await navigator.clipboard.writeText(text);
                return true;
            } catch (err) {
                console.error('Failed to copy: ', err);
                return false;
            }
        } else {
            console.warn('Document is not focused');
            return false;
        }
    }
</script>
